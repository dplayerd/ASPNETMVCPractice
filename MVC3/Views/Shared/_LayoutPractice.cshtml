@using Utility;
@{ 
    var dto = UriHelper.getCurrentUri();


    var siteSetting = dto.SiteInfo;


}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>*@
    <title>@siteSetting.SiteName</title>
    @*<link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/bootstrap.css")" />
    <link type="text/css" rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/overcast/jquery-ui.css" />*@
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/Athena.css")" />
    <style type="text/css">

    </style>
</head>
<body>
    <table>
        <tr>
            <td colspan="2">
                <div id="header" class="MainDiv">
                    <h2> this is Header div </h2>
                    <img src="@Url.Content("~/" + siteSetting.Logo)" width="150px" height="150px" alt="logo" />
                    @siteSetting.HeaderText
                </div>
            </td>
        </tr>


        <tr>
            <td>
                <div id="menu" class="MainDiv">
                    <h2> this is Menu div </h2>
                    @Html.Action("Menu", "Navigation")
                </div>
            </td>
            <td>
                <div class="MainDiv">
                    <h2> this is MainBody div </h2>
                    @RenderBody()
                </div>
            </td>

        </tr>


        <tr>
            <td colspan="2">
                <div id="Footer" class="MainDiv">
                    @siteSetting.FooterText
                </div>
            </td>
        </tr>
    </table>

    <script src="@Url.Content("~/Scripts/jQuery.min.js")"></script>
    @*<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous"></script>*@
    @RenderSection("ScriptArea", false)
</body>
</html>
