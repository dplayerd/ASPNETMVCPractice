@{

    string SiteName = ViewContext.RouteData.Values["site"] as string;
    string CtlName = ViewContext.RouteData.Values["controller"] as string;
    string ActName = ViewContext.RouteData.Values["action"] as string;
    string id = ViewContext.RouteData.Values["id"] as string;



    int layoutNo = 1;

    Dictionary<string, int> dic = new Dictionary<string, int>();


    dic.Add("系統典故", 1);
    dic.Add("子頁面", 2);
    dic.Add("母頁面", 2);
    dic.Add("靜態頁1", 1);
    dic.Add("HTML Page", 2);
    dic.Add("雅典娜的 WIKI 內容", 1);



    string key = Request.QueryString["MenuTitle"];

    key = HttpUtility.UrlDecode(key);

    if (!string.IsNullOrEmpty(key) && dic.ContainsKey(key))
    {
        layoutNo = dic[key];
    }


    switch (layoutNo)
    {
        case 1:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;

        case 2:
            Layout = "~/Views/Shared/_Layout2.cshtml";
            break;

        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}
