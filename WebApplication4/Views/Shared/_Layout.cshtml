@using Utility;
@{
    var dto = UriHelper.getCurrentUri();


    var siteSetting = dto.SiteInfo;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@siteSetting.SiteName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:azure;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("應用程式名稱", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

                <img src="@Url.Content("~/" + siteSetting.Logo)" width="75px" height="75px" alt="logo" />


                @siteSetting.HeaderText

            </div>
            <div class="navbar-collapse collapse">

                @Html.Action("Menu", "Navigation")

            </div>
        </div>
    </div>
 
    <div class="container body-content">
        <br />
        <br />
        <br />
        <br />
        <p style="font-size:large; color: brown; text-align: right;"> This is Skin1 </p>

        @RenderBody()
        <hr />
        <div>
            @Html.Action("Breadcrumbs", "Navigation")
        </div>
        <hr />

        <footer>
            @siteSetting.FooterText
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
